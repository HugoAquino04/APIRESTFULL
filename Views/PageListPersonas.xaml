<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APIRESTFULL.Views.PageListPersonas"
             Title="PageListPersonas">
    
    <VerticalStackLayout>
        <Label Text="Listado de Personas"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10" />

        <CollectionView x:Name="listaempleados"
                            SelectionMode="Single">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="White"
                               CornerRadius="10"
                               HasShadow="True"
                               Padding="10"
                               Margin="0,5">

                        <Grid ColumnDefinitions="*, Auto, Auto"
                                  ColumnSpacing="10"
                                  VerticalOptions="Center">

                            <!-- Datos del empleado -->
                            <VerticalStackLayout Grid.Column="0"
                                                     VerticalOptions="Center">
                                <Label Text="Datos del empleado"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           TextColor="White"
                                           Margin="0,0,0,10"/>

                                <HorizontalStackLayout>
                                    <Label Text="Identidad:" 
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="White"/>
                                    <Label Text="{Binding Identidad}"
                                               FontSize="16"
                                               TextColor="White"
                                               Margin="5,0,0,0"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="Nombre:" 
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="White"/>
                                    <Label Text="{Binding Nombre}"
                                               FontSize="16"
                                               TextColor="White"
                                               Margin="5,0,0,0"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="Fecha ingreso:" 
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="White"/>
                                    <Label Text="{Binding Fechaing}"
                                               FontSize="16"
                                               TextColor="White"
                                               Margin="5,0,0,0"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="Puesto:" 
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="White"/>
                                    <Label Text="{Binding Puesto}"
                                               FontSize="16"
                                               TextColor="White"
                                               Margin="5,0,0,0"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="Correo:" 
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="White"/>
                                    <Label Text="{Binding Correo}"
                                               FontSize="16"
                                               TextColor="LightBlue"
                                               Margin="5,0,0,0"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <!-- Imagen del empleado -->
                            <Image Grid.Column="1"
                                       Source="{Binding Foto, Converter={StaticResource Base64ToImageConverter}}"
                                       WidthRequest="70"
                                       HeightRequest="70"
                                       Aspect="AspectFill"
                                       BackgroundColor="White"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Margin="5" />

                            <!-- Botones Editar y Eliminar (uno sobre otro) -->
                            <VerticalStackLayout Grid.Column="2"
                                         Spacing="5"
                                         VerticalOptions="Center">

                                <Button Text="Editar"
                                        TextColor="White"
                                        BackgroundColor="Blue"
                                        WidthRequest="70"
                                        HeightRequest="40"
                                       />

                                <Button Text="Eliminar"
                                        TextColor="White"
                                        BackgroundColor="Red"
                                        WidthRequest="80"
                                        HeightRequest="40"
                                        />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>